              %form
                %input{:type => "text", :placeholder => "Search..."}
          .bottom_nav_bar
            %ul.secondary
              %li= link_to "Restaurants", "#"
              %li= link_to "Entertainment & Sports", "#"
              %li= link_to "Golf", "#"
              %li= link_to "Health & Beauty", "#"
              %li= link_to "Services", "#"
              %li= link_to "Shopping", "#"
              %li= link_to "Home & Maintenance", "#"
              %li= link_to "Auto", "#"
              %li= link_to "Travel & Lodging", "#"
